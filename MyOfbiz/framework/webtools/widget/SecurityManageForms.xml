<forms xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="../../../framework/base/dtd/widget-form.xsd">
	<form name="findUserLogin" type="single">
		<field name="userLoginId" title="登录名"><text-find></text-find></field>
		<button-list>
			<kd-input type="button" style="k-textbox"  value="查找"  updateGridName="gridUserLogin"/>
		</button-list>
	</form>
	<form name="findUserLoginSecurityGroup" type="single" target="securityManage"  header-row-style="header-row" default-table-style="basic-table" >
		<field name="userLoginId" title="登录名"><text-find></text-find></field>
		<!-- <field name="submit">
			<submit/>
		</field> -->
		<button-list>
			<kd-input type="button" style="k-textbox"  value="查找" updateGridName="gridUserLoginSecurityGroup"/>
		</button-list>
	</form>
	<form name="editUserLogin" type="single"   header-row-style="header-row" default-table-style="basic-table" >
		<field name="userLoginId" title="登录名"  ><text default-value=" "></text></field>
		<field name="currentPassword" title="密码"><text></text></field>
		<button-list>
			<kd-input type="button" style="k-textbox"  value="添加"  updateGridName="gridUserLogin"/>
		</button-list>
	</form>
	<form name="findSecurityGroup" type="single">
		<field name="groupId" title="权限组"><text-find></text-find></field>
		<field name="description"><text-find></text-find></field>
		<button-list>
			<kd-input type="button" style="k-textbox"  value="查找" onclick="findSecurityGroupDetail(this)" />
		</button-list>
	</form>
	<form name="findSecurityPermission" type="single">
		<field name="permissionId" title="权限名称"><text-find></text-find></field>
		<field name="description"><text-find></text-find></field>
		<button-list><kd-input type="button" style="k-textbox"  value="查找"  updateGridName="gridSecurityPermission"/></button-list>
	</form>
</forms>