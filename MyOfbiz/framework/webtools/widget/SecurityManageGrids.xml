<?xml version="1.0" encoding="UTF-8"?>
<grids xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
        xsi:noNamespaceSchemaLocation="../../../framework/base/dtd/widget-grid.xsd">
	<kd-grid name="gridUserLogin" selectable="multiple, row" editable="popup">
		<kd-grid-columns>
			<kd-grid-column name="userLoginId" title="登录名"/>
			<kd-grid-column name="currentPassword" title="密码" width="0"/>
			<kd-grid-command name="edit" type="standard" text="修改" title="修改" width="50"/>
			<kd-grid-command type="client" name="edit1" text="查看所属权限组"  title="查看" width="50" url="securityManage" modelId="userLoginId"/>
			<kd-grid-command type="standard" name="destroy" text="删除"  title="删除" width="50"  />
		</kd-grid-columns>
		<kd-grid-toolbar>
			<kd-grid-toolbar-sub name="create" text="添加"/>
			<kd-grid-toolbar-sub name="save" text="保存"/>
			<kd-grid-toolbar-sub name="cancel" text="取消"/>
		</kd-grid-toolbar>
		<kd-grid-datasource gridName="gridUserLogin" entityName="UserLogin" modelId="userLoginId" create="createUserLogin" destroy="deleteUserLogin"  update="updateUserLogin" >
			<kd-grid-field name="userLoginId" type="string"/>
			<kd-grid-field name="userName" type="string" />
			<kd-grid-field name="zSupplierId" type="string" />
			<kd-grid-field name="traceAuth" type="string"/>
			<kd-grid-field name="currentPassword" type="string" />
		</kd-grid-datasource>
	</kd-grid>
	
	<kd-grid name="gridSecurityGroup" selectable="multiple, row" editable="inline">
		<kd-grid-columns>
			<kd-grid-column name="groupId"/>
			<kd-grid-column name="description"/>
			<kd-grid-command name="edit" type="standard" text="修改" title="修改" width="50"/>
			<kd-grid-command type="standard" name="destroy" text="删除"  title="删除" width="50"  />
		</kd-grid-columns>
		<kd-grid-toolbar>
			<kd-grid-toolbar-sub name="create" text="添加"/>
			<kd-grid-toolbar-sub name="save" text="保存"/>
			<kd-grid-toolbar-sub name="cancel" text="取消"/>
		</kd-grid-toolbar>
		<kd-grid-datasource gridName="gridSecurityGroup" entityName="SecurityGroup" modelId="groupId" create="createSecurityGroup" update="updateSecurityGroup" destroy="deleteSecurityGroup">
			<kd-grid-field name="groupId"/>
			<kd-grid-field name="description"/>
		</kd-grid-datasource>
	</kd-grid>
	
	<kd-grid name="gridUserLoginSecurityGroup" selectable="multiple, row" editable="inline">
		<kd-grid-columns>
			<!-- conditionJson="{ 'data':[{'conditionField':'userLoginId','conditionFieldValue':'ligeng'}] }" -->
			<kd-grid-column name="userLoginId" dropDownType="tableDir" entity="UserLogin" nameField="userLoginId" valueField="userLoginId" />
			<kd-grid-column name="groupId" dropDownType="tableDir" entity="SecurityGroup" nameField="description" valueField="groupId"/>
			<kd-grid-command name="editSecurityGroupsss" type="client" text="编辑权限组" title="编辑权限组" width="50" url="findSecurityGroup" modelId="groupId"/>
			<kd-grid-command name="deleteUserLoginSecurityGroup" type="click" text="删除"  title="删除" width="50" click="deleteUserLoginSecurityGroup"/>
		</kd-grid-columns>
		<kd-grid-toolbar>
			<kd-grid-toolbar-sub name="create" text="添加"/>
			<kd-grid-toolbar-sub name="save" text="保存"/>
			<kd-grid-toolbar-sub name="cancel" text="取消"/>
		</kd-grid-toolbar>
		<kd-grid-datasource gridName="gridUserLoginSecurityGroup" entityName="UserLoginSecurityGroup" modelId="userLoginId" create="createUserLoginSecurityGroup" destroy="deleteUserLoginSecurityGroup">
			<kd-grid-field name="userLoginId" editable="true"/>
			<kd-grid-field name="groupId"/>
		</kd-grid-datasource>
	</kd-grid>
	
	<kd-grid name="gridSecurityPermission" selectable="multiple, row" editable="inline">
		<kd-grid-columns>
			<kd-grid-column name="permissionId"/>
			<kd-grid-column name="description"/>
			<kd-grid-command name="edit" type="standard" text="修改" title="修改"  width="50"/>
			<kd-grid-command name="destroy" type="standard" text="删除"  title="删除" width="50" modelId="permissionId"/>
		</kd-grid-columns>
		<kd-grid-toolbar>
			<kd-grid-toolbar-sub name="create" text="添加"/>
			<kd-grid-toolbar-sub name="save" text="保存"/>
			<kd-grid-toolbar-sub name="cancel" text="取消"/>
		</kd-grid-toolbar>
		<kd-grid-datasource gridName="gridSecurityPermission" entityName="SecurityPermission" modelId="permissionId" 
			pageSize="15" create="createSecurityPermission" update="updateSecurityPermission" destroy="deleteSecurityPermission">
			<kd-grid-field name="permissionId"/>
			<kd-grid-field name="description"/>
		</kd-grid-datasource>
	</kd-grid>
	
	<kd-grid name="gridSecurityGroupPermission" selectable="multiple, row" editable="inline">
		<kd-grid-columns>
			<kd-grid-column name="groupId" dropDownType="tableDir" entity="SecurityGroup" nameField="groupId" valueField="groupId"/>
			<kd-grid-column name="permissionId" dropDownType="tableDir" entity="SecurityPermission" nameField="permissionId" valueField="permissionId" />
			<kd-grid-command name="deleteSecurityGroupPermission" type="click" text="删除"  title="删除" width="50" click="deleteSecurityGroupPermission"/>
		</kd-grid-columns>
		<kd-grid-toolbar>
			<kd-grid-toolbar-sub name="create" text="添加"/>
			<kd-grid-toolbar-sub name="save" text="保存"/>
			<kd-grid-toolbar-sub name="cancel" text="取消"/>
		</kd-grid-toolbar>
		<kd-grid-datasource gridName="gridSecurityGroupPermission" entityName="SecurityGroupPermission" modelId="groupId" 
			create="createSecurityGroupPermission" destroy="deleteSecurityGroupPermission">
			<kd-grid-field name="groupId"/>
			<kd-grid-field name="permissionId"/>
		</kd-grid-datasource>
	</kd-grid>
	
</grids>